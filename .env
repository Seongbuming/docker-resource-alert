# 이메일 알림을 보낼 이메일 계정
## 발신 이메일 주소
EMAIL=
## 발신 이메일 계정 비밀번호
EMAIL_PASSWORD=

# 이메일 서버 설정
## 이메일 발송을 위한 SMTP 서버 주소
SMTP_SERVER=
## SMTP 서버 포트 (일반적으로 587은 TLS용)
SMTP_PORT=587

# 알림을 받을 이메일 주소
RECIPIENT=

# 리소스 사용량 임계값 (%) - 초과 시 알림 발송
## 메모리 사용량 임계값 (%)
MEMORY_THRESHOLD=80
## CPU 사용량 임계값 (%)
CPU_THRESHOLD=90

# 모니터링 간격 (초)
CHECK_INTERVAL=60
